<div class="form-container"><%= form_for(@review) do |f| %>

  <div class="field">
    <% (1..5).each do |number| %> 
      <%= f.radio_button(:rating, number) %>
      <%= f.label(:rating, number) %>
    <% end %>
  </div>

  <div class="letter-field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>


  <div class="field">
    <%=f.collection_select :lesson_id, Lesson.all, :id, :title  %>
  </div>

  <div class="actions">
    <%= f.submit 'Go', :class => "button" %>
  </div>
<% end %>
</div>