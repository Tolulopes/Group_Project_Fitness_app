<div class="user-container">
  <div class="user-name">
    <h3><%= @user.name %></h3>  
  </div>

  <div class="user-image">
    <%= image_tag @user.image %>
  </div>

  <div class="user-content">
    <p><%= @user.biography %></p>
  </div>
</div>

<% @lessons_as_instructor.each do |lesson| %>
  <p><h4><%= lesson.title  %></h4></p>
  <% if current_user && current_user == @user %>
    <% lesson.bookings.each do |booking| %>
      <p><%= booking.user.name %>, <button id="confirm-booking" data-id="<%= lesson.id %>" data-user="<%= @user.id %>"><%= booking.status %></button></p>

    <% end %>
  <% end %>
<% end %>